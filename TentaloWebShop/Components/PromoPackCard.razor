@using TentaloWebShop.Models
@inject CartService Cart
@inject NavigationManager Nav
@inject IJSRuntime JS
@inject ProductService ProductService

<div class="promo-pack-card">
    <div class="pack-card-inner">
        <!-- Imagen del pack -->
        <div class="pack-image-container">
            @if (!string.IsNullOrWhiteSpace(Promo.ImageBase64))
            {
                <img src="@Promo.ImageUrl"
                     alt="@Promo.Description"
                     class="pack-image" />

                <div class="pack-image-placeholder" style="display: none;">
                    <i class="bi bi-image fs-1 text-muted"></i>
                    <p class="text-muted mb-0 mt-2 small">Sin imagen disponible</p>
                </div>
            }
            else
            {
                <div class="pack-image-placeholder">
                    <i class="bi bi-box-seam fs-1 text-muted"></i>
                    <p class="text-muted mb-0 mt-2 small">Pack sin imagen</p>
                </div>
            }

            @if (Promo.TotalSavings > 0)
            {
                <div class="pack-badge-savings">
                    <i class="bi bi-tag-fill me-1"></i>
                    Ahorra @Promo.TotalSavings.ToString("0.00")€
                </div>
            }
        </div>

        <!-- Contenido del pack -->
        <div class="pack-content">
            <h3 class="pack-title">@Promo.Description</h3>

            @if (Promo.EndDate.HasValue)
            {
                <div class="pack-validity">
                    <i class="bi bi-clock me-1"></i>
                    <small class="text-muted">
                        Válido hasta @Promo.EndDate.Value.ToString("dd/MM/yyyy")
                    </small>
                </div>
            }

            <div class="pack-details mt-3">
                <div class="pack-section">
                    <h6 class="pack-section-title">
                        <i class="bi bi-cart-check me-1"></i>
                        Productos incluidos:
                    </h6>
                    <ul class="pack-items-list">
                        @foreach (var line in Promo.SaleLines)
                        {
                            var catalogPrice = GetCatalogPrice(line.ItemNo);
                            <li class="pack-item">
                                <span class="item-quantity">@line.Quantity x</span>
                                <span class="item-name">@line.Description</span>

                                @* ✅ MOSTRAR PRECIO DEL CATÁLOGO *@
                                @if (catalogPrice > 0)
                                {
                                    <span class="item-price">@catalogPrice.ToString("0.00")€</span>
                                }
                                else
                                {
                                    <span class="item-price">@line.UnitPrice.ToString("0.00")€</span>
                                }
                            </li>
                        }
                    </ul>
                </div>

                @if (Promo.GiftLines.Any())
                {
                    <div class="pack-section pack-gifts">
                        <h6 class="pack-section-title text-danger">
                            <i class="bi bi-gift me-1"></i>
                            Regalos/Descuentos:
                        </h6>
                        <ul class="pack-items-list">
                            @foreach (var line in Promo.GiftLines)
                            {
                                var catalogPrice = GetCatalogPrice(line.ItemNo);
                                <li class="pack-item gift-item">
                                    <span class="item-quantity">@line.Quantity x</span>
                                    <span class="item-name">@line.Description</span>

                                    @* ✅ MOSTRAR DESCUENTO SOBRE PRECIO DEL CATÁLOGO *@
                                    @if (line.DiscountPercent >= 100)
                                    {
                                        <span class="badge bg-danger">GRATIS</span>
                                    }
                                    else if (line.DiscountPercent > 0)
                                    {
                                        <span class="item-discount">-@line.DiscountPercent.ToString("0")%</span>
                                    }
                                    else if (line.DiscountAmount > 0 && catalogPrice > 0)
                                    {
                                        var discountPercent = (line.DiscountAmount / catalogPrice) * 100;
                                        <span class="item-discount">-@discountPercent.ToString("0")%</span>
                                    }
                                </li>
                            }
                        </ul>
                    </div>
                }
            </div>

            <div class="pack-footer mt-auto">
                <div class="pack-pricing">
                    @* ✅ CALCULAR PRECIO REAL DEL CATÁLOGO *@
                    @{
                        var realTotalPrice = CalculateRealTotalPrice();
                        var realFinalPrice = realTotalPrice - Promo.TotalSavings;
                    }

                    @if (Promo.TotalSavings > 0)
                    {
                        <div class="price-original">
                            <small class="text-muted text-decoration-line-through">
                                @realTotalPrice.ToString("0.00")€
                            </small>
                        </div>
                    }
                    <div class="price-final">
                        <strong class="fs-4 text-danger">
                            @realFinalPrice.ToString("0.00")€
                        </strong>
                    </div>
                </div>

                <button class="btn btn-danger btn-lg w-100 mt-3"
                        @onclick="AddToCart"
                        disabled="@isAdding">
                    @if (isAdding)
                    {
                        <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                        <span>Agregando...</span>
                    }
                    else
                    {
                        <i class="bi bi-cart-plus me-2"></i>
                        <span>Añadir Pack al Carrito</span>
                    }
                </button>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter, EditorRequired]
    public PromoHeader Promo { get; set; } = default!;

    [Inject]
    public PromoService PromoService { get; set; } = default!;

    private bool isAdding = false;
    private List<Product> catalogProducts = new();

    protected override async Task OnInitializedAsync()
    {
        // ✅ CARGAR PRODUCTOS DEL CATÁLOGO
        try
        {
            catalogProducts = await ProductService.GetAllAsync();
            Console.WriteLine($"[PromoPackCard] Catálogo cargado: {catalogProducts.Count} productos");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"[PromoPackCard] Error cargando catálogo: {ex.Message}");
            catalogProducts = new List<Product>();
        }
    }

    // ✅ MÉTODO PARA OBTENER PRECIO DEL CATÁLOGO
    private decimal GetCatalogPrice(string itemNo)
    {
        if (string.IsNullOrWhiteSpace(itemNo) || !catalogProducts.Any())
            return 0;

        var product = catalogProducts.FirstOrDefault(p =>
            p.Itemno.Equals(itemNo, StringComparison.OrdinalIgnoreCase));

        return product?.PriceFrom ?? 0;
    }

    // ✅ MÉTODO PARA CALCULAR PRECIO TOTAL REAL
    private decimal CalculateRealTotalPrice()
    {
        decimal total = 0;

        // Sumar precios de productos de venta
        foreach (var line in Promo.SaleLines)
        {
            var catalogPrice = GetCatalogPrice(line.ItemNo);
            if (catalogPrice > 0)
            {
                total += catalogPrice * line.Quantity;
            }
            else
            {
                total += line.UnitPrice * line.Quantity;
            }
        }

        // Sumar precios de productos de regalo (sin descuento)
        foreach (var line in Promo.GiftLines)
        {
            var catalogPrice = GetCatalogPrice(line.ItemNo);
            if (catalogPrice > 0)
            {
                total += catalogPrice * line.Quantity;
            }
            else
            {
                total += line.UnitPrice * line.Quantity;
            }
        }

        return total;
    }

    private async Task AddToCart()
    {
        isAdding = true;
        StateHasChanged();

        try
        {
            var validation = await PromoService.ValidatePromo(Promo);
            if (!validation.IsValid)
            {
                Console.WriteLine($"[PromoPackCard] Validación falló: {validation.ErrorMessage}");
                return;
            }

            var packItems = await PromoService.ConvertPromoToCartItems(Promo, packQuantity: 1);

            if (!packItems.Any())
            {
                Console.WriteLine("[PromoPackCard] No se pudieron convertir los items del pack");
                return;
            }

            await Cart.AddPack(packItems);

            Console.WriteLine($"[PromoPackCard] Pack '{Promo.Description}' añadido correctamente");

            Nav.NavigateTo("/carrito");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"[PromoPackCard] Error al añadir pack: {ex.Message}");
        }
        finally
        {
            isAdding = false;
            StateHasChanged();
        }
    }
}

