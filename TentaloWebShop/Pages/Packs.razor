@page "/packs"
@inject LocalizationService L
@implements IDisposable

<div class="container-fluid px-3 px-lg-4 py-4">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex align-items-center gap-3 mb-2">
                <i class="bi bi-box-seam-fill text-danger fs-2"></i>
                <h1 class="mb-0 fw-bold text-dark">@L.T("packs_title")</h1>
            </div>
            <p class="text-muted mb-0">
                @L.T("packs_subtitle")
            </p>
        </div>
    </div>

    <!-- Products Grid -->
    <div class="row">
        <div class="col-12">
            @if (packs == null)
            {
                <div class="text-center py-5">
                    <div class="spinner-border text-danger" role="status">
                        <span class="visually-hidden">@L.T("packs_loading")</span>
                    </div>
                    <p class="mt-3 text-muted">@L.T("packs_loading")</p>
                </div>
            }
            else if (!packs.Any())
            {
                <div class="alert alert-info d-flex align-items-center" role="alert">
                    <i class="bi bi-info-circle-fill me-2"></i>
                    <div>
                        @L.T("packs_no_packs")
                        <a href="/catalogo" class="alert-link">@L.T("packs_explore_catalog")</a>
                    </div>
                </div>
            }
            else
            {
                <div class="mb-3">
                    <span class="badge bg-danger fs-6 px-3 py-2">
                        @L.T("packs_count", packs.Count())
                    </span>
                </div>
                <ProductGrid Data="packs" />
            }
        </div>
    </div>
</div>

@code {
    [Inject] ProductService Products { get; set; } = default!;
    private IEnumerable<Product>? packs;

    protected override async Task OnInitializedAsync()
    {
        L.OnLanguageChanged += OnLanguageChanged;

        try
        {
            packs = await Products.GetPacksAsync();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"[Packs] Error al cargar packs: {ex.Message}");
            packs = Enumerable.Empty<Product>();
        }
    }

    private void OnLanguageChanged()
    {
        InvokeAsync(StateHasChanged);
    }

    public void Dispose()
    {
        L.OnLanguageChanged -= OnLanguageChanged;
    }
}