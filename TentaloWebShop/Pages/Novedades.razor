@page "/novedades"

<div class="container-fluid px-3 px-lg-4 py-4">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex align-items-center gap-3 mb-2">
                <i class="bi bi-stars text-danger fs-2"></i>
                <h1 class="mb-0 fw-bold text-dark">Novedades</h1>
            </div>
            <p class="text-muted mb-0">
                Los productos más recientes de nuestra selección
            </p>
        </div>
    </div>

    <!-- Products Grid -->
    <div class="row">
        <div class="col-12">
            @if (items == null)
            {
                <div class="text-center py-5">
                    <div class="spinner-border text-danger" role="status">
                        <span class="visually-hidden">Cargando novedades...</span>
                    </div>
                    <p class="mt-3 text-muted">Cargando novedades...</p>
                </div>
            }
            else if (!items.Any())
            {
                <div class="alert alert-info d-flex align-items-center" role="alert">
                    <i class="bi bi-info-circle-fill me-2"></i>
                    <div>
                        No hay novedades disponibles en este momento.
                        <a href="/catalogo" class="alert-link">Explorar catálogo completo</a>
                    </div>
                </div>
            }
            else
            {
                <div class="mb-3">
                    <span class="badge bg-danger fs-6 px-3 py-2">
                        @items.Count() novedad@(items.Count() != 1 ? "es" : "") disponible@(items.Count() != 1 ? "s" : "")
                    </span>
                </div>
                <ProductGrid Data="items" />
            }
        </div>
    </div>
</div>

@code {
    [Inject] ProductService Products { get; set; } = default!;
    private IEnumerable<Product>? items;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            // Usar el nuevo método específico para novedades
            items = await Products.GetNovedadesAsync();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"[Novedades] Error al cargar novedades: {ex.Message}");
            items = Enumerable.Empty<Product>();
        }
    }
}