@page "/ofertas"
@inject PromoService PromoService
@inject AuthService Auth
@inject LocalizationService L
@implements IAsyncDisposable

<div class="ofertas-page">
    <!-- Header Section -->
    <div class="ofertas-header">
        <div class="header-content">
            <div class="header-icon">
                <i class="bi bi-tag-fill"></i>
            </div>
            <div class="header-text">
                <h1 class="page-title">@L.T("offers_title")</h1>
                <p class="page-subtitle">
                    @L.T("offers_subtitle")
                </p>
            </div>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="loading-container">
            <div class="spinner-border text-danger loading-spinner" role="status">
                <span class="visually-hidden">@L.T("offers_loading")</span>
            </div>
            <p class="loading-text">@L.T("offers_loading")</p>
        </div>
    }
    else if (!promos.Any())
    {
        <div class="empty-state-container">
            <div class="empty-state-card">
                <div class="empty-icon-wrapper">
                    <i class="bi bi-tag"></i>
                </div>
                <h3 class="empty-title">@L.T("offers_no_offers")</h3>
                <p class="empty-description">
                    @L.T("offers_no_offers_text")
                    @L.T("offers_coming_soon")
                </p>
                <div class="empty-actions">
                    <a href="/catalogo" class="btn btn-primary btn-action">
                        <i class="bi bi-grid me-2"></i>
                        @L.T("offers_explore_catalog")
                    </a>
                    <a href="/novedades" class="btn btn-outline-primary btn-action">
                        <i class="bi bi-star me-2"></i>
                        @L.T("offers_view_news")
                    </a>
                </div>
            </div>
        </div>
    }
    else
    {
        <!-- Stats Badges -->
        <div class="stats-section">
            <div class="stats-badges">
                <span class="stat-badge stat-count">
                    <i class="bi bi-tag-fill"></i>
                    <span class="stat-text">@L.T(promos.Count == 1 ? "offers_count" : "offers_count_plural", promos.Count)</span>
                </span>
                @if (totalSavings > 0)
                {
                    <span class="stat-badge stat-savings">
                        <i class="bi bi-piggy-bank"></i>
                        <span class="stat-text">@L.T("offers_save_up_to", totalSavings.ToString("0.00"))</span>
                    </span>
                }
            </div>
        </div>

        <!-- Promos Cards Grid -->
        <div class="promos-grid">
            @foreach (var promo in promos)
            {
                <div class="promo-card-wrapper">
                    @if (promo.IsNPlusOne)
                    {
                        <PromoPackCardNPlus1 Promo="@promo" />
                    }
                    else
                    {
                        <PromoPackCard Promo="@promo" />
                    }
                </div>
            }
        </div>

        <!-- Info Footer -->
        <div class="info-section">
            <div class="info-card">
                <div class="info-icon-wrapper">
                    <i class="bi bi-info-circle-fill"></i>
                </div>
                <div class="info-content">
                    <h6 class="info-title">@L.T("offers_info_title")</h6>
                    <ul class="info-list">
                        <li>
                            <i class="bi bi-check-circle-fill"></i>
                            <span>@L.T("offers_info_1")</span>
                        </li>
                        <li>
                            <i class="bi bi-check-circle-fill"></i>
                            <span>@L.T("offers_info_2")</span>
                        </li>
                        <li>
                            <i class="bi bi-check-circle-fill"></i>
                            <span>@L.T("offers_info_3")</span>
                        </li>
                        <li>
                            <i class="bi bi-check-circle-fill"></i>
                            <span>@L.T("offers_info_4")</span>
                        </li>
                        <li>
                            <i class="bi bi-check-circle-fill"></i>
                            <span>@L.T("offers_info_5")</span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    }
</div>

@code {
    private List<PromoHeader> promos = new();
    private bool isLoading = true;
    private decimal totalSavings = 0;

    protected override async Task OnInitializedAsync()
    {
        Auth.OnCustomerChanged += OnCustomerChanged;
        L.OnLanguageChanged += OnLanguageChanged;
        await LoadPromos();
    }

    private void OnLanguageChanged()
    {
        InvokeAsync(StateHasChanged);
    }

    private async Task LoadPromos()
    {
        isLoading = true;
        StateHasChanged();

        try
        {
            promos = await PromoService.GetAllPromosAsync();

            // Calcular ahorros: para x+1 usar TotalSavings, para N+1 usar el valor máximo de regalo
            totalSavings = promos.Sum(p =>
            {
                if (p.IsNPlusOne)
                {
                    // El ahorro máximo en N+1 es el precio del producto más caro (puede elegirlo como regalo)
                    return p.Lines.Any() ? p.Lines.Max(l => l.UnitPrice) : 0;
                }
                return p.TotalSavings;
            });

            Console.WriteLine($"[Ofertas] Se cargaron {promos.Count} ofertas");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"[Ofertas] Error al cargar promociones: {ex.Message}");
            promos = new();
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private async Task OnCustomerChanged()
    {
        Console.WriteLine("[Ofertas] Cliente cambió, recargando ofertas");
        await LoadPromos();
    }

    async ValueTask IAsyncDisposable.DisposeAsync()
    {
        Auth.OnCustomerChanged -= OnCustomerChanged;
        L.OnLanguageChanged -= OnLanguageChanged;
        await ValueTask.CompletedTask;
    }
}

