@page "/ofertas"
@inject PromoService PromoService
@inject AuthService Auth
@implements IAsyncDisposable

<div class="container-fluid px-3 px-lg-4 py-4">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex align-items-center gap-3 mb-2">
                <i class="bi bi-tag-fill text-danger fs-2"></i>
                <h1 class="mb-0 fw-bold text-dark">Ofertas y Promociones</h1>
            </div>
            <p class="text-muted mb-0">
                Packs especiales con los mejores descuentos en suplementación deportiva
            </p>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-danger" role="status" style="width: 3rem; height: 3rem;">
                <span class="visually-hidden">Cargando ofertas...</span>
            </div>
            <p class="mt-3 text-muted">Cargando ofertas especiales...</p>
        </div>
    }
    else if (!promos.Any())
    {
        <div class="row">
            <div class="col-12 col-md-8 col-lg-6 mx-auto">
                <div class="alert alert-info d-flex align-items-start p-4" role="alert">
                    <i class="bi bi-info-circle-fill me-3 fs-3"></i>
                    <div class="flex-grow-1">
                        <h5 class="alert-heading mb-2">No hay ofertas disponibles</h5>
                        <p class="mb-2">
                            En este momento no hay promociones activas para tu cuenta.
                            Pronto tendremos nuevas ofertas especiales.
                        </p>
                        <hr>
                        <div class="d-flex gap-2 flex-wrap">
                            <a href="/catalogo" class="btn btn-primary">
                                <i class="bi bi-grid me-2"></i>
                                Explorar Catálogo
                            </a>
                            <a href="/novedades" class="btn btn-outline-primary">
                                <i class="bi bi-star me-2"></i>
                                Ver Novedades
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <!-- Stats Badge -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="d-flex flex-wrap gap-2 align-items-center">
                    <span class="badge bg-danger fs-6 px-3 py-2">
                        <i class="bi bi-tag-fill me-2"></i>
                        @promos.Count @(promos.Count == 1 ? "oferta" : "ofertas") disponible@(promos.Count == 1 ? "" : "s")
                    </span>
                    @if (totalSavings > 0)
                    {
                        <span class="badge bg-success fs-6 px-3 py-2">
                            <i class="bi bi-piggy-bank me-2"></i>
                            Ahorra hasta @totalSavings.ToString("0.00")€
                        </span>
                    }
                </div>
            </div>
        </div>

        <!-- Promos Cards Grid -->
        <div class="row g-4">
            @foreach (var promo in promos)
            {
                <div class="col-12 col-md-6 col-xl-4">
                    <PromoPackCard Promo="@promo" />
                </div>
            }
        </div>

        <!-- Info Footer -->
        <div class="row mt-5">
            <div class="col-12">
                <div class="info-card">
                    <div class="info-icon">
                        <i class="bi bi-info-circle-fill"></i>
                    </div>
                    <div class="info-content">
                        <h6 class="info-title">Información sobre los packs promocionales</h6>
                        <ul class="info-list">
                            <li>Los packs son conjuntos de productos con descuentos especiales</li>
                            <li>Al añadir un pack al carrito, se incluyen automáticamente todos los productos</li>
                            <li>Los packs no se pueden dividir: si eliminas un producto, se elimina el pack completo</li>
                            <li>Puedes añadir múltiples unidades del mismo pack</li>
                            <li>Los descuentos y regalos se aplican automáticamente</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@code {
    private List<PromoHeader> promos = new();
    private bool isLoading = true;
    private decimal totalSavings = 0;

    protected override async Task OnInitializedAsync()
    {
        Auth.OnCustomerChanged += OnCustomerChanged;
        await LoadPromos();
    }

    private async Task LoadPromos()
    {
        isLoading = true;
        StateHasChanged();

        try
        {
            promos = await PromoService.GetAllPromosAsync();
            totalSavings = promos.Sum(p => p.TotalSavings);

            Console.WriteLine($"[Ofertas] Se cargaron {promos.Count} ofertas");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"[Ofertas] Error al cargar promociones: {ex.Message}");
            promos = new();
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private async Task OnCustomerChanged()
    {
        Console.WriteLine("[Ofertas] Cliente cambió, recargando ofertas");
        await LoadPromos();
    }

    async ValueTask IAsyncDisposable.DisposeAsync()
    {
        Auth.OnCustomerChanged -= OnCustomerChanged;
        await ValueTask.CompletedTask;
    }
}

