@page "/producto/{slug}"
@inject ProductService Products
@inject CartService Cart
@inject CategoryService Categories

@if (product is null)
{
    <div class="p-5 text-center">
        <div class="spinner-border text-danger" role="status">
            <span class="visually-hidden">Cargando...</span>
        </div>
    </div>
}
else
{
    var fam = Categories.GetFamily(product.FamilySlug);
    var sub = Categories.GetSub(product.FamilySlug, product.SubfamilySlug);

    <Breadcrumbs Crumbs="@(new List<(string,string,bool)>
                                           {
                                               ("Catálogo","/catalogo",false),
                                               (fam?.Name ?? "Familia",$"/categoria/{fam?.Slug}", false),
                                               (sub?.Name ?? "Subfamilia",$"/categoria/{fam?.Slug}/{sub?.Slug}", false),
                                               (product.Name,$"/producto/{product.Slug}", true)
                                           })" />

<div class="product-detail-page">
    <div class="row g-4">
        <!-- Imagen del Producto -->
        <div class="col-12 col-lg-5">
            <div class="product-image-section">
                <div class="product-image-container">
                    <img src="@product.ImageUrl"
                         alt="@product.Name"
                         class="product-main-image"
                         onerror="this.src='/images/placeholder.png'">
                    @if (product.PriceFrom <= 0)
                        {
                            <div class="product-badge out-of-stock">
                                <i class="bi bi-x-circle"></i> No Disponible
                            </div>
                        }
                        else
                        {
                            <div class="product-badge in-stock">
                                <i class="bi bi-check-circle"></i> Disponible
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- Información del Producto -->
            <div class="col-12 col-lg-7">
                <div class="product-info-section">
                    <!-- Título -->
                    <h1 class="product-detail-title">@product.Name</h1>

                    <!-- Precio -->
                    <div class="product-price-section">
                        <div class="product-price-main">
                            <span class="price-amount">@product.PriceFrom.ToString("N2", CultureInfo.GetCultureInfo("es-ES"))</span>
                            <span class="price-currency">€</span>
                        </div>
                        <div class="product-price-unit">
                            <span class="unit-separator">x</span>
                            <span class="unit-text">@product.Presentation_Unit</span>
                        </div>
                    </div>

                    <!-- Separador -->
                    <hr class="product-divider">

                    <!-- Selector de Cantidad y Botón de Compra -->
                    <div class="product-purchase-section">
                        <div class="quantity-selector-container">
                            <label class="quantity-label">Cantidad:</label>
                            <QuantityStepper Value="qty" ValueChanged="v => qty = v" />
                        </div>

                        <button class="btn btn-add-to-cart btn-lg"
                                @onclick="Add"
                                disabled="@(product.PriceFrom <= 0)">
                            <i class="bi bi-cart-plus me-2"></i>
                            <span>Añadir al Carrito</span>
                        </button>
                    </div>

                    <!-- Características Destacadas -->
                    <div class="product-features">
                        <div class="feature-item">
                            <i class="bi bi-shield-check feature-icon"></i>
                            <span class="feature-text">Producto Original</span>
                        </div>
                        <div class="feature-item">
                            <i class="bi bi-truck feature-icon"></i>
                            <span class="feature-text">Envío Rápido</span>
                        </div>
                        <div class="feature-item">
                            <i class="bi bi-award feature-icon"></i>
                            <span class="feature-text">Calidad Garantizada</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Tabs de Información Detallada -->
        <div class="product-tabs-section mt-5">
            <ul class="nav nav-tabs product-tabs" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link @(activeTab == "description" ? "active" : "")"
                            @onclick="@(() => activeTab = "description")"
                            type="button"
                            role="tab">
                        <i class="bi bi-file-text me-2"></i>
                        Descripción
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link @(activeTab == "ingredients" ? "active" : "")"
                            @onclick="@(() => activeTab = "ingredients")"
                            type="button"
                            role="tab">
                        <i class="bi bi-list-check me-2"></i>
                        Ingredientes
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link @(activeTab == "usage" ? "active" : "")"
                            @onclick="@(() => activeTab = "usage")"
                            type="button"
                            role="tab">
                        <i class="bi bi-info-circle me-2"></i>
                        Modo de Uso
                    </button>
                </li>
            </ul>

            <div class="tab-content product-tab-content">
                @if (activeTab == "description")
                {
                    <div class="tab-pane-custom active">
                        <div class="content-card">
                            <h3 class="content-title">
                                <i class="bi bi-file-text text-primary me-2"></i>
                                Descripción del Producto
                            </h3>
                            <p class="content-text">
                                @product.DescProducto
                            </p>
                        </div>
                    </div>
                }
                else if (activeTab == "ingredients")
                {
                    <div class="tab-pane-custom active">
                        <div class="content-card ingredients-card">
                            <h3 class="content-title">
                                <i class="bi bi-list-check text-success me-2"></i>
                                Composición e Ingredientes
                            </h3>
                            <div class="ingredients-content">
                                <p class="content-text">
                                    @product.Description
                                </p>
                                <div class="alert alert-info mt-3">
                                    <i class="bi bi-info-circle me-2"></i>
                                    <strong>Importante:</strong> Consulte la etiqueta del producto para información nutricional detallada y alérgenos.
                                </div>
                            </div>
                        </div>
                    </div>
                }
                else if (activeTab == "usage")
                {
                    <div class="tab-pane-custom active">
                        <div class="content-card usage-card">
                            <h3 class="content-title">
                                <i class="bi bi-info-circle text-warning me-2"></i>
                                Modo de Uso y Recomendaciones
                            </h3>
                            <div class="usage-content">
                                <div class="usage-section">
                                    <h5><i class="bi bi-clock me-2"></i>Dosis Recomendada</h5>
                                    <p>Consulte las instrucciones específicas en el envase del producto para la dosis adecuada según sus objetivos deportivos.</p>
                                </div>
                                <div class="usage-section">
                                    <h5><i class="bi bi-droplet me-2"></i>Preparación</h5>
                                    <p>Mezcle la cantidad recomendada con agua o su bebida favorita. Agite bien hasta que esté completamente disuelto.</p>
                                </div>
                                <div class="usage-section">
                                    <h5><i class="bi bi-exclamation-triangle me-2"></i>Advertencias</h5>
                                    <p>No superar la dosis diaria recomendada. Los complementos alimenticios no deben utilizarse como sustituto de una dieta equilibrada. Mantener fuera del alcance de los niños.</p>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
}

<style>
    /* ========================================
           PÁGINA DE DETALLE DEL PRODUCTO
           ======================================== */

    .product-detail-page {
        padding: 1rem 0;
    }

    /* ========================================
           SECCIÓN DE IMAGEN
           ======================================== */

    .product-image-section {
        position: relative;
    }

    .product-image-container {
        position: relative;
        background: #fff;
        border-radius: 16px;
        overflow: hidden;
        box-shadow: 0 4px 20px rgba(0,0,0,0.08);
        padding: 2rem;
        border: 1px solid #e9ecef;
    }

    .product-main-image {
        width: 100%;
        height: auto;
        max-height: 500px;
        object-fit: contain;
        display: block;
        margin: 0 auto;
    }

    .product-badge {
        position: absolute;
        top: 1.5rem;
        right: 1.5rem;
        padding: 0.5rem 1rem;
        border-radius: 25px;
        font-weight: 600;
        font-size: 0.875rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
        box-shadow: 0 2px 8px rgba(0,0,0,0.15);
    }

        .product-badge.in-stock {
            background: linear-gradient(135deg, #28a745, #20c997);
            color: white;
        }

        .product-badge.out-of-stock {
            background: linear-gradient(135deg, #dc3545, #c82333);
            color: white;
        }

    /* ========================================
           SECCIÓN DE INFORMACIÓN
           ======================================== */

    .product-info-section {
        padding: 1rem 0;
    }

    .product-detail-title {
        font-size: 2rem;
        font-weight: 700;
        color: #212529;
        margin-bottom: 1.5rem;
        line-height: 1.2;
    }

    .product-price-section {
        display: flex;
        align-items: baseline;
        gap: 0.75rem;
        margin-bottom: 1.5rem;
    }

    .product-price-main {
        display: flex;
        align-items: baseline;
        gap: 0.25rem;
    }

    .price-amount {
        font-size: 2.5rem;
        font-weight: 700;
        color: #dc3545;
    }

    .price-currency {
        font-size: 1.75rem;
        font-weight: 600;
        color: #dc3545;
    }

    .product-price-unit {
        display: flex;
        align-items: baseline;
        gap: 0.5rem;
        color: #6c757d;
        font-size: 1.125rem;
    }

    .unit-separator {
        font-weight: 500;
    }

    .unit-text {
        font-weight: 600;
    }

    .product-divider {
        margin: 1.5rem 0;
        border-top: 2px solid #e9ecef;
    }

    /* ========================================
           SECCIÓN DE COMPRA - VERSIÓN COMPACTA
           ======================================== */

    .product-purchase-section {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
        margin-bottom: 2rem;
        max-width: 500px; /* Limita el ancho máximo en pantallas grandes */
    }

    .quantity-selector-container {
        display: flex;
        align-items: center;
        gap: 1rem;
    }

    .quantity-label {
        font-weight: 600;
        color: #495057;
        margin: 0;
        font-size: 1rem;
        white-space: nowrap;
    }

    /* Hacer el QuantityStepper más compacto */
    .quantity-selector-container ::deep .quantity-stepper {
        max-width: 140px;
    }

    .btn-add-to-cart {
        background: linear-gradient(135deg, #dc3545, #c82333);
        border: none;
        color: white;
        font-weight: 600;
        padding: 1rem 2rem;
        font-size: 1.125rem;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        box-shadow: 0 4px 12px rgba(220, 53, 69, 0.3);
        transition: all 0.3s ease;
        width: 100%;
        max-width: 100%; /* Se ajusta al contenedor padre */
    }

        .btn-add-to-cart:hover:not(:disabled) {
            background: linear-gradient(135deg, #c82333, #bd2130);
            transform: translateY(-2px);
            box-shadow: 0 6px 16px rgba(220, 53, 69, 0.4);
        }

        .btn-add-to-cart:disabled {
            background: #6c757d;
            cursor: not-allowed;
            opacity: 0.6;
        }

    /* ========================================
           CARACTERÍSTICAS DEL PRODUCTO
           ======================================== */

    .product-features {
        display: flex;
        flex-wrap: wrap;
        gap: 1.5rem;
        padding: 1.5rem;
        background: linear-gradient(135deg, #f8f9fa, #e9ecef);
        border-radius: 12px;
        border: 1px solid #dee2e6;
    }

    .feature-item {
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .feature-icon {
        font-size: 1.5rem;
        color: #dc3545;
    }

    .feature-text {
        font-weight: 600;
        color: #495057;
        font-size: 0.95rem;
    }

    /* ========================================
           TABS DE INFORMACIÓN
           ======================================== */

    .product-tabs-section {
        margin-top: 3rem;
    }

    .product-tabs {
        border-bottom: 3px solid #e9ecef;
        gap: 0.5rem;
    }

        .product-tabs .nav-link {
            border: none;
            background: transparent;
            color: #6c757d;
            font-weight: 600;
            padding: 1rem 1.5rem;
            border-radius: 8px 8px 0 0;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
        }

            .product-tabs .nav-link:hover {
                color: #495057;
                background: #f8f9fa;
            }

            .product-tabs .nav-link.active {
                color: #dc3545;
                background: white;
                border-bottom: 3px solid #dc3545;
                margin-bottom: -3px;
            }

    .product-tab-content {
        padding: 2rem 0;
    }

    .tab-pane-custom {
        animation: fadeIn 0.3s ease;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(10px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* ========================================
           CONTENIDO DE LOS TABS
           ======================================== */

    .content-card {
        background: white;
        border-radius: 12px;
        padding: 2rem;
        box-shadow: 0 2px 12px rgba(0,0,0,0.06);
        border: 1px solid #e9ecef;
    }

    .content-title {
        font-size: 1.5rem;
        font-weight: 700;
        color: #212529;
        margin-bottom: 1.5rem;
        display: flex;
        align-items: center;
    }

    .content-text {
        font-size: 1rem;
        line-height: 1.8;
        color: #495057;
        margin-bottom: 0;
    }

    .ingredients-card,
    .usage-card {
        background: linear-gradient(to bottom right, #ffffff, #f8f9fa);
    }

    .ingredients-content {
        margin-top: 1rem;
    }

    .usage-content {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
    }

    .usage-section h5 {
        color: #212529;
        font-weight: 700;
        margin-bottom: 0.75rem;
        display: flex;
        align-items: center;
    }

    .usage-section p {
        color: #6c757d;
        line-height: 1.6;
        margin-bottom: 0;
    }

    /* ========================================
           RESPONSIVE - DESKTOP EXTRA GRANDE
           ======================================== */

    @@media (min-width: 1400px) {
        .product-purchase-section {
            max-width: 450px; /* Aún más compacto en pantallas muy grandes */
        }
    }

    /* ========================================
           RESPONSIVE - TABLET
           ======================================== */

    @@media (max-width: 991.98px) {
        .product-purchase-section {
            max-width: none; /* Quita el límite en tablets */
        }

        .product-detail-title {
            font-size: 1.75rem;
        }

        .price-amount {
            font-size: 2rem;
        }

        .price-currency {
            font-size: 1.5rem;
        }

        .product-features {
            flex-direction: column;
            gap: 1rem;
        }
    }

    /* ========================================
           RESPONSIVE - MOBILE
           ======================================== */

    @@media (max-width: 767.98px) {
        .product-detail-page {
            padding: 0.5rem 0;
        }

        .product-image-container {
            padding: 1rem;
            border-radius: 12px;
        }

        .product-main-image {
            max-height: 300px;
        }

        .product-badge {
            top: 1rem;
            right: 1rem;
            padding: 0.375rem 0.75rem;
            font-size: 0.75rem;
        }

        .product-detail-title {
            font-size: 1.5rem;
            margin-bottom: 1rem;
        }

        .price-amount {
            font-size: 1.75rem;
        }

        .price-currency {
            font-size: 1.25rem;
        }

        .product-price-unit {
            font-size: 1rem;
        }

        .product-purchase-section {
            gap: 1rem;
        }

        .quantity-selector-container {
            width: 100%;
            justify-content: space-between;
        }

            .quantity-selector-container ::deep .quantity-stepper {
                max-width: none;
            }

        .btn-add-to-cart {
            width: 100%;
            padding: 0.875rem 1.5rem;
            font-size: 1rem;
        }

        .product-features {
            padding: 1rem;
            gap: 0.75rem;
        }

        .feature-icon {
            font-size: 1.25rem;
        }

        .feature-text {
            font-size: 0.875rem;
        }

        .product-tabs-section {
            margin-top: 2rem;
        }

        .product-tabs {
            flex-wrap: nowrap;
            overflow-x: auto;
            -webkit-overflow-scrolling: touch;
        }

            .product-tabs .nav-link {
                padding: 0.75rem 1rem;
                font-size: 0.875rem;
                white-space: nowrap;
            }

        .content-card {
            padding: 1.25rem;
        }

        .content-title {
            font-size: 1.25rem;
            margin-bottom: 1rem;
        }

        .content-text {
            font-size: 0.9375rem;
        }
    }

    /* ========================================
           PANTALLAS MUY PEQUEÑAS
           ======================================== */

    @@media (max-width: 375px) {
        .product-detail-title {
            font-size: 1.25rem;
        }

        .price-amount {
            font-size: 1.5rem;
        }

        .btn-add-to-cart {
            padding: 0.75rem 1rem;
            font-size: 0.9375rem;
        }

        .product-tabs .nav-link {
            padding: 0.625rem 0.75rem;
            font-size: 0.8125rem;
        }
    }
</style>

@code {
    [Parameter] public string slug { get; set; } = string.Empty;
    private Product? product;
    private int qty = 1;
    private string activeTab = "description";

    protected override async Task OnParametersSetAsync()
    {
        product = (await Products.GetAllAsync()).FirstOrDefault(p => p.Slug == slug);
    }

    private async Task Add()
    {
        if (product is not null && qty >= 1)
        {
            await Cart.Add(product, qty);
        }
    }
}