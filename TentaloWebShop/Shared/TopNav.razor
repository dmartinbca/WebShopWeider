@inject AuthService Auth
@inject NavigationManager Nav
@inject CartService Cart
@inject IJSRuntime JS
<!-- Nuevo menú móvil tipo drawer - Solo accesible en móvil (< 992px) -->
<!-- El componente se renderiza pero el botón para abrirlo solo aparece en móvil -->
<MobileMenu IsOpen="@mobileMenuOpen" IsOpenChanged="@((value) => mobileMenuOpen = value)" />

<nav class="navbar navbar-expand-lg border-bottom sticky-top">
    <div class="container-fluid">
        <!-- Botón de menú hamburguesa para móvil (a la izquierda) -->
        <button class="btn btn-menu-toggle d-lg-none" 
                @onclick="OpenMobileMenu"
                aria-label="Abrir menú">
            <i class="bi bi-list fs-4"></i>
        </button>

        <!-- Logo -->
        <a href="/" class="navbar-brand d-flex align-items-center">
            <img src="/images/Weiderlogo.png" alt="Logo" class="app-icon" />
        </a>

        <!-- Mobile Actions - Visible solo en móvil (a la derecha) -->
        <div class="mobile-actions d-lg-none">
            <!-- Carrito Móvil -->
            <CartIcon />

            <!-- Usuario Móvil -->
            @if (Auth.IsAuthenticated)
            {
                <div class="dropdown">
                    <button class="btn btn-link text-dark p-2" type="button" data-bs-toggle="dropdown">
                        <i class="bi bi-person-circle fs-5"></i>
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end shadow border-0">
                        <li><h6 class="dropdown-header">@Auth.CurrentUser?.FullName</h6></li>
                        <li><hr class="dropdown-divider" /></li>
                        <li>
                            <a class="dropdown-item d-flex align-items-center" href="/perfil">
                                <i class="bi bi-person me-2"></i> Mi Perfil
                            </a>
                        </li>
                        <li>
                            <a class="dropdown-item d-flex align-items-center" href="/pedidos">
                                <i class="bi bi-bag me-2"></i> Mis Pedidos
                            </a>
                        </li>
                        <li>
                            <a class="dropdown-item d-flex align-items-center" href="/facturas">
                                <i class="bi bi-receipt me-2"></i> Mis Facturas
                            </a>
                        </li>
                        <li><hr class="dropdown-divider" /></li>
                        <li>
                            <button class="dropdown-item d-flex align-items-center text-danger" @onclick="Logout">
                                <i class="bi bi-box-arrow-right me-2"></i> Salir
                            </button>
                        </li>
                    </ul>
                </div>
            }
            else
            {
                <button class="btn btn-link text-dark p-2" @onclick='() => Nav.NavigateTo("/login")'>
                    <i class="bi bi-person-circle fs-5"></i>
                </button>
            }
        </div>

        <!-- Desktop Navigation - Visible solo en desktop -->
        <div class="d-none d-lg-flex flex-grow-1 align-items-center justify-content-between">
            <!-- Desktop: Barra de búsqueda -->
            <div class="search-section flex-grow-1 mx-4">
                <SearchBar />
            </div>

            <!-- Enlaces de navegación -->
            <ul class="navbar-nav align-items-center gap-1 me-3">
                <li class="nav-item"><a class="nav-link" href="/catalogo">Catálogo</a></li>
                <li class="nav-item"><a class="nav-link" href="/packs">Packs</a></li>
                <li class="nav-item"><a class="nav-link" href="/ofertas">Ofertas</a></li>
                <li class="nav-item"><a class="nav-link" href="/novedades">Novedades</a></li>
            </ul>
            @if (Auth.CurrentUser?.Tipo == "Sales Team")
            {
                <li class="nav-item">
                    <button class="nav-link btn btn-link" @onclick="OpenClientSelector">
                        <i class="bi bi-people me-1"></i>
                        Clientes
                    </button>
                </li>
            }
            <!-- Desktop: Sección del carrito y usuario -->
            <div class="desktop-actions d-flex align-items-center gap-3">
                <!-- Carrito -->
                <CartIcon />

                <!-- Menú de usuario -->
                @if (Auth.IsAuthenticated)
                {
                    <div class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" data-bs-toggle="dropdown">
                            <div class="user-avatar me-2">
                                <i class="bi bi-person-circle"></i>
                            </div>
                            <span class="d-none d-lg-inline">@GetShortName()</span>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end shadow border-0">
                            <li><h6 class="dropdown-header">@Auth.CurrentUser?.FullName</h6></li>
                            <li><hr class="dropdown-divider" /></li>
                            <li>
                                <a class="dropdown-item d-flex align-items-center" href="/perfil">
                                    <i class="bi bi-person me-2"></i> Mi Perfil
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item d-flex align-items-center" href="/pedidos">
                                    <i class="bi bi-bag me-2"></i> Mis Pedidos
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item d-flex align-items-center" href="/facturas">
                                    <i class="bi bi-receipt me-2"></i> Mis Facturas
                                </a>
                            </li>
                            <li><hr class="dropdown-divider" /></li>
                            <li>
                                <button class="dropdown-item d-flex align-items-center text-danger" @onclick="Auth.LogoutAsync">
                                    <i class="bi bi-box-arrow-right me-2"></i> Salir
                                </button>
                            </li>
                        </ul>
                    </div>
                }
                else
                {
                    <div class="d-flex gap-2">
                        <a class="btn btn-outline-secondary btn-sm" href="/login">Acceder</a>
                        <a class="btn btn-danger btn-sm" href="/register">Registrar</a>
                    </div>
                }
            </div>
        </div>
    </div>
</nav>

@code {
    private bool mobileMenuOpen = false;

    protected override void OnInitialized() => Cart.Changed += StateHasChanged;

    private void OpenMobileMenu()
    {
        mobileMenuOpen = true;
    }

    private async Task Logout()
    {
        await Auth.LogoutAsync();
        Nav.NavigateTo("/");
    }
    private async Task OpenClientSelector()
    {
        await JS.InvokeVoidAsync("eval", "$('#clientSelectorModal').modal('show')");
    }

    private string GetShortName()
    {
        var fullName = Auth.CurrentUser?.FullName ?? "";
        var parts = fullName.Split(' ');
        return parts.Length > 0 ? parts[0] : "Usuario";
    }
}