@using WeiderShop.Services
@inherits LayoutComponentBase
@inject BusyService Busy
@inject AuthService Auth
@implements IDisposable

<TopNav />

<!-- Banner de selección de cliente (solo visible para Sales Team) -->
@if (Auth.CurrentUser?.Tipo == "Sales Team")
{
    <ClientSelector />
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-2 pt-3 sidebar-cats d-none d-lg-block">
            <CategorySidebar />
        </div>
        <div class="col-12 col-lg-10 p-3">
            @Body
        </div>
    </div>
</div>

@if (Busy.IsBusy)
{
    <LoadingOverlay Message="@Busy.Message" />
}

<Footer />

<!-- ✅ BOTÓN FLOTANTE DEL CARRITO - SIEMPRE VISIBLE -->
<FloatingCartButton />

@code {
    protected override void OnInitialized() => Busy.Changed += StateHasChanged;
    public void Dispose() => Busy.Changed -= StateHasChanged;
}